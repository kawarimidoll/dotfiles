#!/bin/bash

cd ~/ghq/github.com/kawarimidoll/deno-dev-template/

filename="playground.js"

echo 'console.log("Playground start");' > "$filename"

nvim "$filename" \
  -c 'Dex' \
  -c 'setlocal autowriteall' \
  -c 'delete _' \
  -c 'startinsert'
  # -c 'autocmd CursorHold <buffer> write'

rm -f "$filename"
