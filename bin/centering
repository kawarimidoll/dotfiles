#!/usr/bin/env bash

# 端末サイズ取得
rows=$(tput lines)
cols=$(tput cols)

# 標準入力を配列に格納
lines=()
while IFS= read -r line; do
  lines+=("$line")
done

# ANSIエスケープシーケンスを除去して最大表示幅を計算
max_len=$(printf '%s\n' "${lines[@]}" | sed -E 's/\x1b\[[0-9;]*[mGKHJF]//g' | wc -L)

line_count=${#lines[@]}
row_pad=$(( (rows - line_count) / 2 ))
col_pad=$(( (cols - max_len) / 2 ))

# 1行目は最後にピリオドのついた空白行として出力
# 空白行が削除される場合があるため
printf "%*s.\n" "$((cols-1))" ""

# 上部の空白行（1行目はピリオド付きの行として既に出力済み）
printf '\n%.0s' $(seq $((row_pad - 1)))

# 左パディングを事前計算（全行で共通）
left_pad=$(printf "%*s" "$col_pad" "")
# コンテンツ行
for line in "${lines[@]}"; do
  printf "%s%s\n" "$left_pad" "$line"
done

# 下部の空白行
printf '\n%.0s' $(seq $row_pad)
