### keybindings

keybind = clear

keybind = global:super+grave_accent=toggle_quick_terminal
keybind = super+shift+a=write_screen_file:paste
keybind = super+shift+p=toggle_command_palette

#### basic
keybind = super+n=new_window
keybind = super+q=quit
keybind = super+t=new_tab
keybind = super+shift+t=undo
keybind = super+w=close_surface
keybind = ctrl+shift+tab=previous_tab
keybind = ctrl+tab=next_tab
keybind = super+c=copy_to_clipboard
keybind = super+v=paste_from_clipboard

#### font
keybind = super+zero=reset_font_size
keybind = super+minus=decrease_font_size:1
keybind = super+plus=increase_font_size:1
keybind = super+equal=increase_font_size:1

#### config
# keybind = super+comma=open_config
keybind = super+comma=text: vim ~/.config/ghostty/config\n
keybind = super+shift+comma=reload_config
keybind = super+shift+i=inspector:toggle

#### split
keybind = super+d=new_split:right
keybind = super+shift+d=new_split:down
keybind = super+left_bracket=goto_split:previous
keybind = super+right_bracket=goto_split:next
keybind = super+ctrl+equal=equalize_splits
keybind = super+ctrl+k=resize_split:up,10
keybind = super+ctrl+j=resize_split:down,10
keybind = super+ctrl+l=resize_split:right,10
keybind = super+ctrl+h=resize_split:left,10
keybind = super+shift+enter=toggle_split_zoom

#### scroll
keybind = super+home=scroll_to_top
keybind = super+end=scroll_to_bottom
keybind = super+page_up=scroll_page_up
keybind = super+page_down=scroll_page_down
keybind = super+up=scroll_page_lines:4
keybind = super+down=scroll_page_lines:4
keybind = super+shift+up=scroll_page_fractional:-0.5
keybind = super+shift+down=scroll_page_fractional:0.5

#### shift+enter: CSI u エンコーディング
keybind = shift+enter=text:\x1b[13;2u

#### numpad enter to normal enter
keybind = kp_enter=text:\r

