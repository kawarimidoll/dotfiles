{
  "title": "Emacs-like ctrl key settings for Slack, Notion and Figma",
  "description": "various key settings using ctrl key for mac desktop apps",
  "rules": [
    {
      "description": "ctrl+npfb to arrow for Slack, Notion and Figma",
      "manipulators": [
        {
          "conditions": [
            {
              "bundle_identifiers": [
                "^com\\.tinyspeck\\.slackmacgap$",
                "^notion\\.id$",
                "^com\\.figma\\.Desktop$"
              ],
              "type": "frontmost_application_if"
            }
          ],
          "description": "Ctrl-n to down_arrow",
          "from": {
            "key_code": "n",
            "modifiers": {
              "mandatory": ["left_control"],
              "optional": ["any"]
            }
          },
          "to": [{ "key_code": "down_arrow" }],
          "type": "basic"
        },
        {
          "conditions": [
            {
              "bundle_identifiers": [
                "^com\\.tinyspeck\\.slackmacgap$",
                "^notion\\.id$",
                "^com\\.figma\\.Desktop$"
              ],
              "type": "frontmost_application_if"
            }
          ],
