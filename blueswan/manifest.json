{
  "manifest_version": 3,
  "name": "Blueswan",
  "author": "kawarimidoll",
  "version": "1.0.0",
  "description": "Hide noisy numbers in Bluesky.",
  "content_scripts": [
    {
      "matches": ["https://staging.bsky.app/*"],
      "js": ["./script.js"],
      "css": ["./style.css"]
    }
  ],
  "action": {
    "default_popup": "./popup.html"
  },
  "permissions": ["storage"]
}
